<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderConfirmed" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_homescreen"
            android:layout_width="150dp"
            android:layout_height="109dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/orange_logo_extra_simple" />
        <TextView
            android:id="@+id/Copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2022-2022 EXTRA SIMPLE"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="RESERVATION CONFIRMED!"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/inconsolota_bold"
            android:textColor="@color/black"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="182dp"
            android:layout_height="139dp"
            android:layout_gravity="center|bottom"
            android:foregroundGravity="center|bottom"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/check" />

        <FrameLayout
            android:layout_width="313dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle_white">

            <TextView
                android:id="@+id/finalresultTv"
                android:layout_width="wrap_content"
                android:layout_height="199dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inconsolota_regular"
                android:gravity="center|top"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GO BACK To home page" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>