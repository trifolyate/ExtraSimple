<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreen">


<ImageView
        android:id="@+id/logo_homescreen"
        android:layout_width="150dp"
        android:layout_height="109dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/orange_logo_extra_simple" />
    <TextView
        android:id="@+id/Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2022-2022 EXTRA SIMPLE"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/homescreen_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/exampleFood"
                android:layout_width="173dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/example_food"
                />

            <TextView
                android:id="@+id/Comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Food in Town!"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/arimamadurai_black" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/GordanRamsey"
                android:layout_height="wrap_content"
                android:text="-Gordan Ramsey, 2022"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/arimamadurai_black" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/star_red"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/bookAtable"
                android:text="BOOK A TABLE NOW!"
                android:layout_marginTop="50dp" />


        </LinearLayout>
    </FrameLayout>

</LinearLayout>